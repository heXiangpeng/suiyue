<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".LoginActivity"
    android:baselineAligned="false"

    android:background="#ebe8e8"
   android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    >





 <LinearLayout

     android:layout_width="fill_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"

     android:gravity="center"
     >


     <TextView
         android:layout_width="fill_parent"
         android:background="@color/grey"
         android:layout_height="1dp">

     </TextView>
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="fill_parent"

        android:inputType="phone"

        android:layout_height="50dp"
        android:background="@drawable/inputcornear"
        android:hint="手机号"

        />
     <TextView
         android:layout_width="fill_parent"
         android:background="@color/grey"
         android:layout_height="1dp">

     </TextView>




    <EditText
        android:id="@+id/edit_passwd"
        android:layout_width="fill_parent"
        android:layout_height="50dp"


        android:inputType="textWebPassword"

        android:hint="密   码"
        android:background="@drawable/inputcornear"

        />
     <TextView
         android:layout_width="fill_parent"
         android:background="@color/grey"
         android:layout_height="1dp">

         </TextView>




     <Button
         android:id="@+id/btn_login"
         android:layout_margin="10dp"
         android:background="@drawable/buttonclick"
         android:layout_width="fill_parent"
         android:layout_height="40dp"
         android:text="登陆"
         android:textColor="@color/navgationitem"
         android:textSize="18dp"
         android:elevation="3dp"
         />


     <Button
         android:id="@+id/btn_register"
         android:layout_gravity="center_horizontal"

         android:layout_marginTop="60dp"
         android:layout_width="90dp"
         android:layout_height="40dp"
         android:text="注册"

         android:textSize="20dp"
         android:textColor="#ff336a66"
         android:background="#ebe8e8"

         />



 </LinearLayout>







</LinearLayout>
