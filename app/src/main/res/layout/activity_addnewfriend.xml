<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fffbfffb"
    android:id="@+id/addnewfriend_main"
    >

    <LinearLayout


        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/navgation"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/addnewfriend_back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/backrow"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"

            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            >





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="搜索好友"

                android:textColor="@color/navgationitem"
                android:textSize="18dp"

                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:background="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_et_input"
                android:layout_gravity="center_vertical"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/search_icon"
                android:drawablePadding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_edittext_shape"
                android:textSize="14sp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="请输入关键字"/>

            <ImageView


                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/iv_delete_bg"
                android:id="@+id/search_iv_delete"
                android:layout_alignRight="@+id/search_et_input"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </LinearLayout>


    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/list_searchresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        android:divider="#fffbfffb"


        ></ListView>
</LinearLayout>
