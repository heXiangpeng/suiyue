<?xml version="1.0" encoding="utf-8"?>
<customview.SildingFinishLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/sildingFinishLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:divider="#fff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout


        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/navgation"
        android:elevation="2dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/contact_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"

            android:background="@drawable/backrow" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"

            android:gravity="center"
            android:orientation="vertical">


            <customview.RoundImageView
                android:id="@+id/img_contact_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:gravity="center"

                />

            <TextView
                android:id="@+id/text_contact_name"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/navgationitem"
                android:textSize="15dp"

                />

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/list_contact"
        android:layout_width="fill_parent"


        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"

        android:divider="#00000000"

        android:dividerHeight="2dip"

        android:listSelector="@android:color/transparent">

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"



        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="0.9"
            android:elevation="12dp"
            >

            <EditText


                android:id="@+id/text_message"
                android:layout_height="45dp"


                android:layout_width="match_parent"


                android:background="#fff"

                android:layout_gravity="center"



                android:hint=" 输入"
                android:textSize="15dp"

                />


        </android.support.v7.widget.CardView>



        <android.support.design.widget.FloatingActionButton


            android:id="@+id/contact_send"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/navgation"
            app:rippleColor="#fff"
            app:elevation="12dp"
            app:pressedTranslationZ="12dp"
            android:layout_margin="0dp"
            android:src="@drawable/send"
 />



    </LinearLayout>


</customview.SildingFinishLayout>
