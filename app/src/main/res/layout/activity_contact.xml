<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/sildingFinishLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="false"
    android:background="#fff"

    android:fitsSystemWindows="true"
    android:orientation="vertical"
   >




    <LinearLayout


        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/navgation"
        android:elevation="2dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/contact_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"

            android:background="@drawable/backrow" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"

            android:gravity="center"
            android:orientation="vertical">


            <customview.RoundImageView
                android:id="@+id/img_contact_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:gravity="center"

                />

            <TextView
                android:id="@+id/text_contact_name"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:textColor="@color/navgationitem"
                android:textSize="15dp"

                />

        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/list_contact"
        android:layout_width="fill_parent"


        android:layout_weight="1"
        android:layout_height="0dp"

        android:background="#fff"

        android:divider="#00000000"

        android:dividerHeight="2dip"
        android:layout_marginBottom="3dp"

        android:listSelector="@android:color/transparent">

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"

        android:layout_marginRight="5dp"

        android:elevation="12dp"
        >


        <android.support.v7.widget.CardView
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:elevation="0dp"
            android:background="#ffe2f6ff"



            >

            <ImageButton
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/emoij"
                />

            <EditText



                android:id="@+id/text_message"
                android:layout_height="40dp"

                android:layout_marginLeft="30dp"

                android:layout_width="match_parent"
                android:layout_marginRight="4dp"

                android:background="#ffe2f6ff"
                android:layout_gravity="center"
                android:hint=" 输入"
                android:textSize="15dp"

                />



        </android.support.v7.widget.CardView>

        <android.support.design.widget.FloatingActionButton


            android:id="@+id/contact_send"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/navgation"
            app:rippleColor="#fff"
            app:elevation="0dp"
            app:pressedTranslationZ="0dp"

            android:src="@drawable/send"

            />

 </LinearLayout>


</LinearLayout>
