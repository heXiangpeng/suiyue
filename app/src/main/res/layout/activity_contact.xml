<?xml version="1.0" encoding="utf-8"?>
<customview.SildingFinishLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/sildingFinishLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:divider="#d9d8d8">

    <LinearLayout


        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/navgation"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/contact_back"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/backrow"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"

            android:gravity="center"
            android:orientation="vertical"
            >



            <customview.RoundImageView
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:id="@+id/img_contact_photo"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:id="@+id/text_contact_name"
                android:textColor="@color/navgationitem"
                android:textSize="15dp"

                />

        </LinearLayout>


    </LinearLayout>

  <ListView
        android:id="@+id/list_contact"
        android:layout_width="fill_parent"


      android:divider="#00000000"
      android:dividerHeight="2dip"
      android:listSelector="@android:color/transparent"

      android:background="#fff"

      android:layout_weight="1"

        android:layout_height="0dp">

        </ListView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"


            android:orientation="horizontal">
        <EditText
            android:id="@+id/text_message"

            android:background="@color/grey"

            android:layout_margin="2dp"

            android:layout_gravity="center"
            android:layout_width="0dp"
          android:layout_weight="0.9"
            android:textSize="15dp"
            android:hint="  输入"
            android:layout_height="match_parent"

            />


            <android.support.design.widget.FloatingActionButton

                android:id="@+id/contact_send"

                android:layout_marginRight="5dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="right|center"
                android:src="@drawable/send"

                app:fabSize="normal"

                >

            </android.support.design.widget.FloatingActionButton>

        </LinearLayout>



</customview.SildingFinishLayout>
