<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#ebe8e8"

    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey">

        </TextView>

        <EditText
            android:id="@+id/ver_phonenumber"
            android:layout_width="fill_parent"


            android:layout_height="50dp"
            android:background="@drawable/inputcornear"
            android:hint="手机号"

            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey">

        </TextView>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#fff"
            >

        <EditText
            android:id="@+id/ver_code"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/inputcornear"
            android:hint="验证码"

            />

            <TextView
                android:id="@+id/ver_getcode"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingRight="5dp"

                android:text="获取验证码"
                android:background="@drawable/editsendcornear"

                />

        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/grey">

        </TextView>


        <LinearLayout
            android:id="@+id/linear_judgecode"
            android:layout_width="fill_parent"

            android:gravity="center"

            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonclick"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:textSize="18dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/torow"

                />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
